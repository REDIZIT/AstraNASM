	public main(): int
	{
		ByteArray arr1 = ByteArray.FromSize()
		ByteArray arr2 = ByteArray.FromSize()

		arr1.set(0, 1)
		arr1.set(1, 2)

		arr2.set(0, 10)
		arr2.set(1, 20)
		
		arr1.set(8, 20) -- Out of bounds

		byte v = arr1.get(0) + arr2.get(0)

		return v
	}
}

class ByteArray
{
	public static FromSize(): ByteArray
	{
		ByteArray pointer = alloc(8)
		return pointer
	}

	public get(long index): byte
	{
		ptr pointer = self.to_ptr()
		pointer.shift(index)

		byte b = pointer.get_byte()

		return b
	}
	public set(long index, byte value)
	{
		ptr pointer = self.to_ptr()
		pointer.shift(index)

		pointer.set(value)
		return
	}
}

